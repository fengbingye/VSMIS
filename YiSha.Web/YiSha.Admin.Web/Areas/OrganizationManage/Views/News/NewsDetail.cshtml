@{
    Layout = "~/Views/Shared/_FormWhite.cshtml";
}

<div class="wrapper animated fadeInRight h5">
    <form id="form" class="form-horizontal m-t">
        <div class="form-group">
            <label class="col-sm-2 control-label ">文章标题:</label>
            <div class="form-control-static " col="NewsTitle"></div>
        </div>
        <div class="form-group h6">
            <label class="col-sm-2 control-label">作者:</label>
            <div class="form-control-static" col="NewsAuthor"></div>
        </div>
        <div class="form-group h6">
            <label class="col-sm-2 control-label">发布时间:</label>
            <div class="form-control-static" col="NewsDate"></div>
        </div>

        <div class="form-group" >
            <label class="col-sm-2 control-label">文章内容:</label>
            <div class="col-sm-10">
                <div class="form-control-static"  col="NewsContent"></div>
            </div>
 
        </div>
    </form>
</div>

<script type="text/javascript">
    var id = ys.request("id");

    $(function () {
        getForm();

    });

    function getForm() {
        if (id > 0) {
            ys.ajax({
                url: '@Url.Content("~/OrganizationManage/News/GetFormJson")' + '?id=' + id,
                type: "get",
                success: function (obj) {
                    if (obj.Tag == 1) {
                        var result = obj.Data;
                        $("#form").setWebControls(result);
                    }
                }
            });
        }
    }
</script>
